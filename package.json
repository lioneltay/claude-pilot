{
  "name": "claude-pilot",
  "version": "1.0.0",
  "private": true,
  "description": "Proxy Claude Code requests through GitHub Copilot",
  "scripts": {
    "dev": "turbo dev",
    "dev:proxy": "turbo dev --filter=@claude-pilot/proxy",
    "dev:dashboard": "turbo dev --filter=@claude-pilot/dashboard",
    "dev:spy": "turbo dev --filter=@claude-pilot/proxy-spy --filter=@claude-pilot/dashboard-spy",
    "start": "turbo start",
    "typecheck": "turbo typecheck",
    "test": "./scripts/test-regression.sh",
    "logs:clear": "rm -f logs/requests.jsonl && echo 'Logs cleared'",
    "logs:clear:spy": "rm -f logs/spy.jsonl && echo 'Spy logs cleared'",
    "publish:cli": "pnpm --filter @lioneltay/claude-pilot publish --access public",
    "release:cli": "pnpm --filter @lioneltay/claude-pilot exec npm version patch && git add packages/cli/package.json packages/cli/package-lock.json && git commit -m 'Bump CLI version' && git push && pnpm publish:cli"
  },
  "devDependencies": {
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.27.0"
}
